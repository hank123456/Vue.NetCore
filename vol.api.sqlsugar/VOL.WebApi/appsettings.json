  "AllowedHosts": "*",
  "VirtualPath": {
    "StaticFile": "E:\\Web\\Static", //配置的虚拟目录文件所在路径
    "FolderName": "/Static" //访问时此路径时的别名
  },
  "FileStorage": {
    "Type": "Local", // Local 或 Minio
    "Local": {
      "UploadPath": "Upload",
      "VirtualPath": "/Upload"
    },
    "Minio": {
      "Endpoint": "127.0.0.1:9000",
      "AccessKey": "minioadmin",
      "SecretKey": "minioadmin",
      "BucketName": "tec-files",
      "Secure": false,
      "Region": "us-east-1"
    }
  },
  "AppUrls": {
  },
  "Connection": {
    "DBType": "PgSql", //MySql/MsSql/PgSql/DM/Oracle  //数据库类型，如果使用的是sqlserver此处应设置为MsSql
    "UseSqlserver2008": "0", //是否使用Sqlserver2008,1开启08数据库的支持
